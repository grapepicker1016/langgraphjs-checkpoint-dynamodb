{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist/esm",
      "module": "ESNext",
      "target": "ES2022",
      "declaration": true,
      "declarationDir": "./dist/esm",
      "sourceMap": true,
      "moduleResolution": "Node",
      "importHelpers": true,
      "noEmit": false,
      "rootDir": "./src",
      "preserveSymlinks": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/__tests__/**"]
  }
  